{#/**
* @file
* Template to display a Admintools header.
* Be default called by AdmintoolsHeader area.
*
* Available variables:
* - title: Header Title.
* - empty: Whether there are any results.
*
* @ingroup themeable
*/
#}





<!-- OST Toolbox VIEWS  -->
<div class="ost-toolbox-view">

    <!-- Button Group -->
    <div class="btn-group btn-group-sm" role="group">


        {% if vat.button_new %}

        <!-- Neu -->
        <a type="button" class="btn btn-default  use-ajax" data-dialog-type="modal" href="node/add/{{  vat.node_type }}?destination={{ vat.destination }}">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"> </span>
            {% trans %} new {% endtrans %}
        </a>

        {% endif %}



        {% if vat.button_sort %}

            <!-- Sortieren -->
            <a type="button" class="btn btn-default" href="admin/{{ vat.node_type }}-sort?destination={{ vat.destination }}">
                <span class="glyphicon glyphicon-sort" aria-hidden="true"> </span>
                {% trans %} Reihenfolge festlegen {% endtrans %}
            </a>

        {% endif %}


        {% if vat.list_taxonomy %}
        {% for taxonomy in vat.list_taxonomy %}

        <!-- {{ taxonomy }} -->
        <a type="button" class="btn btn-default"
           href="admin/structure/taxonomy/manage/{{ taxonomy }}/overview?destination={{ vat.destination }}" aria-label="{{ taxonomy }}">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span> {{ taxonomy }}
        </a>

        {% endfor %}
        {% endif %}


    </div>




</div>
<!-- ENDE OST Toolbox VIEWS  -->